{
    "tasks": [
      {
        "type": "cppbuild",
        "label": "C/C++: gcc build active file",
        "command": "/usr/bin/gcc",
        "args": [
          "-fdiagnostics-color=always",
          "-g",
          "-Wall",
          "-o",
          "${file}",
          "${fileDirname}/${fileBasenameNoExtension}",
          "networks.o",
          "gethostbyname.o",
          "pollLib.o", 
          "safeUtil.o", 
          "pdulib.o",
          "handleTable.o"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      }
    ],
    "version": "2.0.0"
  }
  